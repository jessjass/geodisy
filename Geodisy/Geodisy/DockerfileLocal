FROM adoptopenjdk/openjdk11:alpine

# Create working directory
RUN mkdir -p /home/geodisy/app

# Set working directory
WORKDIR /home/geodisy/app

# Copy code
COPY . /home/geodisy/app

RUN apk add --no-cache bash && \
  apk add maven && \
  mvn clean install
ENTRYPOINT ["java", "-jar", "target/Geodisy-1.0-SNAPSHOT-jar-with-dependencies.jar"]
ENTRYPOINT ["tail"]
CMD ["-f","/dev/null"]
